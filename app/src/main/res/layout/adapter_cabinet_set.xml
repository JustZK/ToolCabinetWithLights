<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="141dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:backgroundTint="@color/transparent">

    <LinearLayout
        android:id="@+id/adapter_cabinet_set_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/border_line"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adapter_cabinet_set_name_tv"
                android:padding="@dimen/card_elevation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/white"
                android:textSize="@dimen/super_big_lite_text" />

            <TextView
                android:id="@+id/adapter_cabinet_set_file_number_tv"
                android:padding="@dimen/card_elevation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|end"
                android:textColor="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/adapter_cabinet_set_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white" />

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:background="@drawable/border_line"
        android:id="@+id/adapter_cabinet_set_main_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="主\n屏\n幕"
        android:textColor="@color/white"
        android:textSize="@dimen/super_big_text"/>



</LinearLayout>
